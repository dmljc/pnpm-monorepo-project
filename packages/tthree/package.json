{
    "name": "tthree",
    "type": "module",
    "version": "1.0.0",
    "description": "A TypeScript-based Three.js wrapper library providing core functionality for 3D graphics",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/three-base.esm.js",
            "default": "./dist/three-base.esm.js"
        }
    },
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "package.json"
    ],
    "scripts": {
        "dev": "rollup -c -w",
        "docs": "pnpm exec typedoc --options typedoc.json && prettier --write \"docs/api/**/*.md\"",
        "docs:dev": "pnpm docs && vitepress dev docs --port 3333",
        "docs:build": "pnpm docs && vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "build": "rollup -c && pnpm run docs"
    },
    "keywords": [
        "threejs",
        "3d",
        "webgl",
        "typescript"
    ],
    "author": "zhangfangchao",
    "license": "ISC",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.3.0",
        "@types/three": "^0.182.0",
        "rollup": "^4.54.0",
        "rollup-plugin-dts": "^6.3.0",
        "three": "^0.182.0",
        "typedoc": "^0.28.15",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3",
        "vitepress": "^1.6.4"
    },
    "peerDependencies": {
        "three": "^0.181.1"
    }
}
