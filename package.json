{
    "name": "pnpm-monorepo-project",
    "version": "1.0.0",
    "main": "index.js",
    "private": true,
    "type": "module",
    "scripts": {
        "client:dev": "pnpm -F client dev",
        "client:build": "pnpm -F client build",
        "server:dev": "pnpm -F server start:dev",
        "server:debug": "pnpm -F server start:debug",
        "server:build": "pnpm -F server build",
        "server:clean-all-logs": "pnpm -F server clean:all-logs",
        "server:clean-old-logs": "pnpm -F server clean:old-logs",
        "clean:all-dists": "rm -rf ./packages/*/dist ./dist",
        "clean:all-node_modules": "rm -rf ./node_modules ./packages/*/node_modules pnpm-lock.yaml",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "docs:dev": "vitepress dev docs  --host 0.0.0.0",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "prepare": "husky",
        "lint:lint-staged": "lint-staged",
        "commit": "pnpm lint && pnpm lint:fix && git-cz"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{cjs,json}": [
            "prettier --write"
        ],
        "*.{vue,html}": [
            "eslint --fix",
            "prettier --write",
            "stylelint --fix"
        ],
        "*.{scss,css}": [
            "prettier --write",
            "stylelint --fix"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.31.0",
        "commitizen": "^4.3.1",
        "cz-git": "^1.12.0",
        "eslint": "^9.31.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-es5": "^1.5.0",
        "eslint-plugin-prettier": "^5.5.3",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "init": "^0.1.2",
        "lint-staged": "^16.1.2",
        "npx": "^10.2.2",
        "postcss-html": "^1.8.0",
        "prettier": "^3.6.2",
        "stylelint": "^16.22.0",
        "stylelint-config-standard": "^38.0.0",
        "typescript-eslint": "^8.37.0",
        "vitepress": "^1.6.3"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": ""
}
